<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingEnd="5dp"
    android:paddingStart="5dp"
    android:paddingTop="10dp">


    <TextView
        android:id="@+id/loginID_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/reset_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="20dp"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@id/loginID_txt"
        android:text="wants to reset password"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <Button
        android:id="@+id/accptBtn"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="45dp"
        android:background="#0ecc00"
        android:text="Accept"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/denyBtn"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/reset_txt"
        android:layout_marginStart="20dp"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@id/accptBtn"
        android:background="@color/colorPrimary"
        android:text="Deny"
        android:textColor="#FFFFFF" />

</RelativeLayout>